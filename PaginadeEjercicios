    <script>
        const toggleButton = document.getElementById('toggle-solutions-btn');
        const solutionsContainer = document.getElementById('solutions-container');
        toggleButton.addEventListener('click', () => {
            const isVisible = solutionsContainer.style.display === 'block';
            if (isVisible) {
                solutionsContainer.style.display = 'none';
                toggleButton.textContent = 'Ver Soluciones';
            } else {
                solutionsContainer.style.display = 'block';
                toggleButton.textContent = 'Ocultar Soluciones';
            }
        });
    </script>
